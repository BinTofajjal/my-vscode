{
  "vsicons.dontShowNewVersionMessage": true,
  "git.autofetch": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "liveServer.settings.donotVerifyTags": true,
  "git.enableSmartCommit": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "tailwindCSS.emmetCompletions": true,
  "editor.fontFamily": "Fira Code, Operator Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "workbench.startupEditor": "none",
  "debug.console.fontFamily": "FuraMono Nerd Font, Operator Mono",
  "debug.console.fontSize": 13,
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "files.exclude": {},

  // Config For Custom CSS and JS Loader Extention

  "vscode_custom_css.imports": ["file:///Users/zer01ne/vs-code/style.css"], // Your style.css Path
  "vscode_custom_css.policy": true,

  // Config related to code formatting Using Prettier and EsLint

  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": true,
    "source.organizeImports": true
  },
  "eslint.alwaysShowStatus": true,

  //=== Todo Highlight Extention config

  "todohighlight.keywords": [
    {
      "text": "VIDEO",
      "color": "#333",
      "backgroundColor": "#3498db"
    },
    {
      "text": "FIXME",
      "color": "#333",
      "backgroundColor": "#e67e22"
    },
    {
      "text": "LEC",
      "color": "#333",
      "backgroundColor": "#f1c40f"
    },
    {
      "text": "BUG",
      "color": "#333",
      "backgroundColor": "#e74c3c"
    },
    {
      "text": "TODO",
      "color": "#333",
      "backgroundColor": "#2ecc71"
    },
    {
      "text": "//===",
      "color": "#ffffff24",
      "backgroundColor": "#ffffff24"
    },
    {
      "text": "===//",
      "color": "#ffffff24",
      "backgroundColor": "#ffffff24"
    }
  ],

  //=== Fluent icon Extention config

  "editor.linkedEditing": true,
  "editor.cursorBlinking": "expand",
  "workbench.productIconTheme": "fluent-icons",
  "editor.codeLensFontFamily": "Fira Code, Operator Mono",

  //terminal
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "MesloLGM Nerd Font",
  "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
  "workbench.iconTheme": "vscode-icons",

  // terminal customization
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#ffff00",
    "terminalCursor.foreground": "#ffff00",
    "terminal.background": "#1D2021",
    // "terminal.foreground": "#A89984",
    // "terminalCursor.background": "#A89984",
    "terminal.ansiBlack": "#1D2021",
    "terminal.ansiBlue": "#0D6678",
    // "terminal.ansiBrightBlack": "#665C54",
    "terminal.ansiBrightBlue": "#0D6678",
    "terminal.ansiBrightCyan": "#8BA59B",
    "terminal.ansiBrightGreen": "#86ff5a",
    "terminal.ansiBrightMagenta": "#8F4673",
    "terminal.ansiBrightRed": "#FB543F",
    // "terminal.ansiBrightWhite": "#FDF4C1",
    "terminal.ansiBrightYellow": "#FAC03B",
    "terminal.ansiCyan": "#8BA59B",
    "terminal.ansiGreen": "#86ff5a",
    "terminal.ansiMagenta": "#8F4673",
    "terminal.ansiRed": "#FB543F",
    "terminal.ansiWhite": "#A89984",
    "terminal.ansiYellow": "#FAC03B"
  }
}
