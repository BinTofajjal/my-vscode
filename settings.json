{
  "vsicons.dontShowNewVersionMessage": true,
  "git.autofetch": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "liveServer.settings.donotVerifyTags": true,
  "git.enableSmartCommit": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
  "liveServer.settings.donotShowInfoMsg": true,
  "tailwindCSS.emmetCompletions": true,
  "editor.fontFamily": "Fira Code, Operator Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "workbench.startupEditor": "none",
  "terminal.integrated.fontSize": 13,
  "debug.console.fontFamily": "FuraMono Nerd Font, Operator Mono Light",
  "debug.console.fontSize": 13,
  "terminal.integrated.fontFamily": "FuraMono Nerd Font, Operator Mono Light",
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "files.exclude": {},
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#ffff00",
    "terminalCursor.foreground": "#ffff00"
  },

  // Config For Custom CSS and JS Loader Extention

  "vscode_custom_css.imports": ["file:///Users/zer01ne/vs-code/style.css"], // Your style.css Path
  "vscode_custom_css.policy": true,

  // Config related to code formatting Using Prettier and EsLint

  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": true,
    "source.organizeImports": true
  },
  "eslint.alwaysShowStatus": true,

  //=== Todo Highlight Extention config

  "todohighlight.keywords": [
    {
      "text": "VIDEO",
      "color": "#333",
      "backgroundColor": "#3498db"
    },
    {
      "text": "FIXME",
      "color": "#333",
      "backgroundColor": "#e67e22"
    },
    {
      "text": "LEC",
      "color": "#333",
      "backgroundColor": "#f1c40f"
    },
    {
      "text": "BUG",
      "color": "#333",
      "backgroundColor": "#e74c3c"
    },
    {
      "text": "//===",
      "color": "rgba(255, 255, 255, 0.14)",
      "backgroundColor": "rgba(255, 255, 255, 0.14)"
    },
    {
      "text": "===//",
      "color": "rgba(255, 255, 255, 0.14)",
      "backgroundColor": "rgba(255, 255, 255, 0.14)"
    },
    {
      "text": "TODO",
      "color": "#333",
      "backgroundColor": "#2ecc71"
    }
  ],

  //=== Fluent icon Extention config

  "editor.linkedEditing": true,
  "editor.cursorBlinking": "expand",
  "workbench.productIconTheme": "fluent-icons"
}
